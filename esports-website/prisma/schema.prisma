// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Example models for esports website
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Team {
  id          String   @id @default(cuid())
  name        String
  tag         String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("teams")
}

model Match {
  id        String   @id @default(cuid())
  team1Id   String
  team2Id   String
  score1    Int?
  score2    Int?
  status    String   @default("scheduled") // scheduled, live, completed
  startTime DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("matches")
}
